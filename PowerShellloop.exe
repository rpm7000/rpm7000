PS C:\Users\Admin> $Source ="C:\Users\Admin\Downloads\A"
PS C:\Users\Admin> $Destination ="C:\Users\Admin\Downloads\B"
PS C:\Users\Admin> # Continuous monitoring loop
PS C:\Users\Admin> while ($true) {
>>     # Copy items recursively from source to destination
>>     Copy-Item -Path "$Source\*" -Destination $Destination -Recurse -Force
>>
>>     # Add a delay to prevent excessive CPU usage
>>     Start-Sleep -Seconds 5
>> }


